<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/domo_white"
    android:orientation="vertical"
    android:padding="15sp">

    <com.buggycoder.domo.ui.controls.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Verify Organization"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/domo_green"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp" />

    <com.buggycoder.domo.ui.controls.CustomFontTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10sp"
        android:text="Organization:"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <AutoCompleteTextView
        android:id="@+id/acOrgCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:completionThreshold="1" />

    <com.buggycoder.domo.ui.controls.CustomFontTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20sp"
        android:text="Organization code:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etOrgCode"
        android:layout_width="280sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="left"
        android:maxLength="8"
        android:textColor="@color/domo_green"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnOrgCodeCheck"
        style="@style/btnGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit Code" />


</LinearLayout>