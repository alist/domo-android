<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:orientation="vertical"
    android:paddingBottom="20sp">


    <LinearLayout
        android:id="@+id/formOrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="22sp"
            android:paddingRight="12sp"
            android:paddingTop="16sp"
            android:text="Join Community"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/domo_green" />

        <AutoCompleteTextView
            android:id="@+id/acOrgCode"
            style="@style/AutoCompleteTextViewAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="12sp"
            android:completionThreshold="1"
            android:padding="12sp"
            android:hint="Enter your organization's name"
            android:maxLines="2" />

        <Button
            android:id="@+id/btnAskCode"
            style="@style/ButtonAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="140dp"
            android:text="Next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/formCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="22sp"
            android:paddingRight="12sp"
            android:paddingTop="16sp"
            android:text="Membership Verification"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/domo_green" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please enter the organization code for:"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrgDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Domo, Inc."
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10sp"
            android:background="@android:color/white"
            android:padding="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Posters, postcards, or friends should have it."
            android:gravity="center"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etOrgCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:gravity="center"
            android:maxLength="7"
            android:textColor="@color/domo_green"
            android:cursorVisible="true"
            android:ems="5"
            android:singleLine="true"
            android:textSize="36sp"
            style="@style/EditTextAppTheme"
            android:hint="Code" />

        <Button
            android:id="@+id/btnCheckCode"
            style="@style/ButtonAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="140dp"
            android:text="Submit" />

    </LinearLayout>
</LinearLayout>